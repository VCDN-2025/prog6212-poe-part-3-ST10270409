@model List<CMCS.Web.Models.Claim>
@using CMCS.Web.Models
@{
    ViewData["Title"] = "My Claims";

    string Badge(ClaimStatus s) => s switch
    {
        ClaimStatus.Pending => "badge bg-warning",
        ClaimStatus.VerifiedByCoordinator => "badge bg-info",
        ClaimStatus.ApprovedByManager => "badge bg-success",
        _ => "badge bg-danger"
    };

    int Percent(ClaimStatus s) => s switch
    {
        ClaimStatus.Pending => 25,
        ClaimStatus.VerifiedByCoordinator => 75,
        ClaimStatus.ApprovedByManager => 100,
        _ => 0
    };

    string BarClass(ClaimStatus s) => s switch
    {
        ClaimStatus.Pending => "bg-warning",
        ClaimStatus.VerifiedByCoordinator => "bg-info",
        ClaimStatus.ApprovedByManager => "bg-success",
        _ => "bg-danger"
    };
}
<h2>My Claims</h2>
<partial name="_Alerts" />

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Date</th>
            <th>Hours</th>
            <th>Total (R)</th>
            <th>Status</th>
            <th style="width:220px">Progress</th>
            <th>Docs</th>
            <th>Upload</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            var pct = Percent(c.Status);
            <tr>
                <td>@c.Date.ToString("dd MMM yyyy")</td>
                <td>@c.HoursWorked.ToString("0.#")</td>
                <td>@c.Total.ToString("F2")</td>
                <td><span class="@Badge(c.Status)">@c.Status</span></td>
                <td>
                    <div class="progress" style="height: 18px;">
                        <div class="progress-bar @BarClass(c.Status)" role="progressbar"
                             style="width:@pct%;">
                            @pct%
                        </div>
                    </div>
                </td>
                <td>
                    @foreach (var d in c.Documents)
                    {
                        <div>
                            <a asp-action="Download" asp-route-claimId="@c.Id" asp-route-docId="@d.Id">@d.OriginalFileName</a>
                            (@Math.Round(d.SizeBytes / 1024.0, 1) KB)
                        </div>
                    }
                </td>
                <td>
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="file" name="file" class="form-control form-control-sm" />
                        <button class="btn btn-sm btn-secondary mt-1">Upload</button>
                        @Html.AntiForgeryToken()
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>