@model CMCS.Web.Models.NewClaimVm
@{
    ViewData["Title"] = "New Claim";
}
<h2 class="mb-3">New Monthly Claim</h2>

<div class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Lecturer</label>
        <input class="form-control" value="@Model.LecturerName" readonly />
    </div>
    <div class="col-md-4">
        <label class="form-label">Month</label>
        <select class="form-select">
            <option selected>@Model.MonthLabel</option>
            <option>October 2025</option>
        </select>
    </div>
    <div class="col-md-4">
        <label class="form-label">Status</label>
        <input class="form-control" value="@Model.Status" readonly />
    </div>
</div>

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span class="fw-semibold">Claim Items</span>
        <div class="btn-group">
            <button class="btn btn-sm btn-outline-secondary" disabled>Add Row</button>
            <button class="btn btn-sm btn-outline-secondary" disabled>Remove Row</button>
            <button class="btn btn-sm btn-outline-secondary" disabled>Attach…</button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-sm table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 140px;">Date</th>
                    <th>Hours</th>
                    <th>Activity</th>
                    <th>Rate</th>
                    <th>Line Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.WorkDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Hours</td>
                        <td>@item.Activity</td>
                        <td>@item.HourlyRate</td>
                        <td>@item.LineTotal</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-end gap-2 mt-3">
    <button class="btn btn-outline-primary">Save Draft</button>
    <button class="btn btn-primary" disabled title="Disabled in prototype">Submit for Review</button>
</div>

<p class="text-muted small mt-2">Actions are disabled to respect Part 1’s non-functional requirement.</p>
