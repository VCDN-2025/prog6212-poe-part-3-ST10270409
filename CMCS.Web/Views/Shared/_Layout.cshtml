@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var userName = Context.Session.GetString("UserName");
    var userRole = Context.Session.GetString("UserRole");
    var isAuthenticated = User.Identity?.IsAuthenticated == true;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "CMCS")</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isAuthenticated)
                        {
                            @if (userRole == "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Claims" && ViewContext.RouteData.Values["action"]?.ToString()=="Create" ? "active" : null)"
                                       asp-controller="Claims" asp-action="Create">Create Claim</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Claims" && ViewContext.RouteData.Values["action"]?.ToString()=="My" ? "active" : null)"
                                       asp-controller="Claims" asp-action="My">My Claims</a>
                                </li>
                            }

                            @if (userRole == "Coordinator")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Coordinator" ? "active" : null)"
                                       asp-controller="Coordinator" asp-action="Index">Review Claims</a>
                                </li>
                            }

                            @if (userRole == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Manager" ? "active" : null)"
                                       asp-controller="Manager" asp-action="Index">Approve Claims</a>
                                </li>
                            }

                            @if (userRole == "HR")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="HR" ? "active" : null)"
                                       asp-controller="HR" asp-action="Dashboard">HR Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Account" && ViewContext.RouteData.Values["action"]?.ToString()=="ManageUsers" ? "active" : null)"
                                       asp-controller="Account" asp-action="ManageUsers">Manage Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Reports" ? "active" : null)"
                                       asp-controller="Reports" asp-action="Index">Reports</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    Welcome, @(userName ?? User.Identity?.Name) (@userRole)
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        <partial name="_Alerts" />
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container small text-muted">
            © @DateTime.Now.Year CMCS — Contract Monthly Claim System
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>