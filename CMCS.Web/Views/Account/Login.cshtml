@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Login to CMCS</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>

                    @Html.AntiForgeryToken()
                </form>

                <div class="mt-4">
                    <h6>Demo Accounts:</h6>
                    <div class="small">
                        <div><strong>Lecturer:</strong> lecturer@campus.com / lecturer123</div>
                        <div><strong>Coordinator:</strong> coordinator@campus.com / coordinator123</div>
                        <div><strong>Manager:</strong> manager@campus.com / manager123</div>
                        <div><strong>HR:</strong> hr@campus.com / hr123</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>