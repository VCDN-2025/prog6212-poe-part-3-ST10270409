@model CMCS.Web.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
}

<div class="container py-4">

    <h2 class="fw-bold mb-3">Claim Details</h2>

    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-body">

            <dl class="row mb-0">
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Hours Worked</dt>
                <dd class="col-sm-9">@Model.HoursWorked</dd>

                <dt class="col-sm-3">Hourly Rate</dt>
                <dd class="col-sm-9">R @Model.HourlyRate.ToString("N2")</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9 fw-bold">R @Model.Total.ToString("N2")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Notes</dt>
                <dd class="col-sm-9">@Model.Notes</dd>
            </dl>

        </div>
    </div>

    <a href="/Claims/My" class="btn btn-secondary">Back to My Claims</a>
</div>
