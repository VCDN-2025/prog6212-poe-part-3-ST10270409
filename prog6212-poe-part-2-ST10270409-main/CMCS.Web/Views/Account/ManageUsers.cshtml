@model IEnumerable<CMCS.Web.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="mb-4">Manage Users</h2>

    @* Global alerts using TempData *@
    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="CreateUser" class="btn btn-primary">
            Create New User
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Hourly Rate</th>
                        <th>Last Login</th>
                        <th>Status</th>
                        <th style="width: 260px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                @(
                                    user.Role == "Lecturer"
                                    ? $"R {user.HourlyRate:0.00}"
                                    : "N/A"
                                    )
                            </td>
                            <td>
                                @(user.LastLogin.HasValue
                                    ? user.LastLogin.Value.ToString("yyyy-MM-dd HH:mm")
                                    : "Never")
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditUser"
                                       asp-route-id="@user.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Edit
                                    </a>

                                    <a asp-action="ResetPassword"
                                       asp-route-id="@user.Id"
                                       class="btn btn-sm btn-warning">
                                        Reset Password
                                    </a>

                                    <form asp-action="DeleteUser"
                                          asp-route-id="@user.Id"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete @user.Name?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 text-muted small">
        HR can create, update, deactivate and reset passwords for users, and configure
        lecturer hourly rates used in the automated claim calculation.
    </div>
</div>
