@model CMCS.Web.Models.User

@{
    ViewData["Title"] = "Create New User";
}

<div class="container mt-4">
    <h2 class="mb-4">Create New User</h2>

    <form asp-action="CreateUser" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="card shadow-sm p-4" style="max-width: 650px;">

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="user@campus.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-bold"></label>
                <select asp-for="Role" class="form-select">
                    <option value="">Select role</option>
                    <option value="HR">HR</option>
                    <option value="Coordinator">Coordinator</option>
                    <option value="Lecturer">Lecturer</option>
                    <option value="Manager">Manager</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HourlyRate" class="form-label fw-bold">Hourly Rate (Lecturer only)</label>
                <input asp-for="HourlyRate" class="form-control" placeholder="350.00" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                <div class="form-text">
                    For lecturers, this rate is used by the automated claim calculation (hours × rate).
                </div>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label fw-bold">Active account</label>
            </div>

            <div class="d-flex justify-content-start mt-3">
                <button type="submit" class="btn btn-primary">Create User</button>
                <a asp-action="ManageUsers" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
