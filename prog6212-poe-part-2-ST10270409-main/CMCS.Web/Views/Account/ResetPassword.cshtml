@model CMCS.Web.Models.ResetPasswordVm

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-4" style="max-width: 700px;">
    <h2 class="mb-4">Reset Password</h2>

    <div class="alert alert-info">
        <strong>HR Action:</strong> You are resetting the password for
        <span class="fw-bold">@Model.UserName</span>.
        This is a temporary password — the user should change it after logging in.
    </div>

    <form asp-action="ResetPassword" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="card shadow-sm p-4">
            <div class="mb-3">
                <label class="form-label fw-bold">User</label>
                <input asp-for="UserName" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-bold"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start mt-3">
                <button class="btn btn-primary">Reset Password</button>
                <a asp-action="ManageUsers" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
